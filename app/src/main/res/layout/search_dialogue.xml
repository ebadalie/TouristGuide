<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent">
    <LinearLayout
    android:id="@+id/inputpnel"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Search"

        android:layout_margin="10dp"
        android:gravity="center"
        android:id="@+id/searchQuery"
        style="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"
        />
    <Button
        android:layout_margin="10dp"
        android:text="Search"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        style="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />
</LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/inputloadingPanel"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/loadingprogress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:progress="@integer/abc_max_action_buttons" />
    </LinearLayout>
</LinearLayout>